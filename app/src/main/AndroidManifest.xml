<?xml version="1.0" encoding="utf-8"?>
<!-- AI智能生活管理APP - Android清单文件 -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络权限（AI API调用） -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 语音识别权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- 通知权限（提醒功能） -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 前台服务权限（计时功能） -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- 精确闹钟权限（提醒功能） -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <!-- 开机启动权限（恢复提醒） -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- 悬浮窗权限（悬浮球功能） -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- 唤醒锁权限（保持悬浮球服务运行） -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- 请求忽略电池优化（保持后台运行） -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- 相机权限（拍照识别） -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 前台服务类型声明 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <application
        android:name=".LifeManagerApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AIManagement"
        tools:targetApi="34">

        <!-- 主Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AIManagement"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 提醒广播接收器 -->
        <receiver
            android:name=".core.reminder.ReminderReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.lifemanager.app.REMINDER_ACTION" />
            </intent-filter>
        </receiver>

        <!-- 开机广播接收器 -->
        <receiver
            android:name=".core.reminder.BootReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- 悬浮球前台服务 -->
        <service
            android:name=".core.floatingball.FloatingBallService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
        <!-- Note: specialUse requires API 34, using dataSync for SDK 33 compatibility -->

        <!-- 悬浮球重启接收器 -->
        <receiver
            android:name=".core.floatingball.FloatingBallRestartReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <!-- 支付通知监听服务 -->
        <service
            android:name=".core.notification.PaymentNotificationService"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <!-- FileProvider用于相机拍照 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- 目标追踪桌面小组件 -->
        <receiver
            android:name=".widget.GoalWidgetProvider"
            android:exported="true"
            android:label="@string/widget_goal_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.lifemanager.app.widget.GOAL_REFRESH" />
                <action android:name="com.lifemanager.app.widget.ADD_GOAL" />
                <action android:name="com.lifemanager.app.widget.VIEW_GOAL" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/goal_widget_info" />
        </receiver>

        <!-- 目标小组件列表服务 -->
        <service
            android:name=".widget.GoalWidgetRemoteViewsService"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            android:exported="false" />

        <!-- 待办事项桌面小组件 -->
        <receiver
            android:name=".widget.TodoWidgetProvider"
            android:exported="true"
            android:label="@string/widget_todo_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.lifemanager.app.widget.TODO_REFRESH" />
                <action android:name="com.lifemanager.app.widget.ADD_TODO" />
                <action android:name="com.lifemanager.app.widget.TOGGLE_TODO" />
                <action android:name="com.lifemanager.app.widget.VIEW_TODO" />
                <action android:name="com.lifemanager.app.widget.VIEW_ALL_TODO" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/todo_widget_info" />
        </receiver>

        <!-- 待办小组件列表服务 -->
        <service
            android:name=".widget.TodoWidgetRemoteViewsService"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            android:exported="false" />

    </application>

</manifest>
